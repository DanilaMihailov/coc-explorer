  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
